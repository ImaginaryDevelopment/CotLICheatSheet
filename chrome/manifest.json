{
  "manifest_version": 2,
  "name": "Crusaders Automaton",
  "description": "This extension will get your crusaders data for you",
  "version": "1.0",

  "page_action": {
   "default_icon": "original_COTLI_Icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "webRequest",
   "activeTab",
   "*://*.kongregate.com/*",
   "*://*.djartsgames.ca/~idle/post.php",
   "*://imaginarydevelopment.github.io/"
   ],
   "background":{
    "scripts":["popup.js"]
   }
}